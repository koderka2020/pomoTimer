{
    "name": "Pomo",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Pomo",
      "styling": "button.css"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": ["tabs", "alarms"],
    "icons": { 
     "128": "redTomato.png" }
  }